@import 'variables.styl'

h1,
h2
  font-family: 'Overpass Mono', monospace

header
  text-transform: uppercase
  text-align: center
  background: $primary
  color: $white
  position: relative
  user-select: none
  cursor: default
  a
    text-decoration: none
    color: $white
    &:hover
      color: $accent

h1
  margin: 0
  font-size: 10vw
  @media screen and (max-width: 770px)
    font-size: 20vw
    margin-top: -2vw

h2
  margin-top: -3vw
  margin-bottom: 0
  padding-bottom: 2vw
  font-size: 5vw
  @media screen and (max-width: 770px)
    font-size: 10vw
    margin-top: -4.5vw
